# Production Configuration Template
# بعد النشر، قم بنسخ هذا الملف إلى shopify.app.pos-sync.toml
# وقم بتحديث القيم التالية:

client_id = "YOUR_CLIENT_ID"
name = "POS Sync"
application_url = "https://your-production-domain.com"
embedded = true

[build]
automatically_update_urls_on_dev = false
include_config_on_deploy = true

[webhooks]
api_version = "2026-01"

[access_scopes]
scopes = "read_inventory,read_product_listings,read_products,write_inventory,write_product_listings,write_products"

[auth]
redirect_urls = [
  "https://your-production-domain.com/auth/callback",
  "https://your-production-domain.com/auth/shopify/callback"
]
