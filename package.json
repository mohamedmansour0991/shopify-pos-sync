{
  "name": "shopify-pos-sync",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev --port 3001",
    "dev:shopify": "shopify app dev",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "start": "node server.js",
    "typecheck": "tsc",
    "generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "setup": "prisma generate && prisma db push",
    "postinstall": "prisma generate",
    "deploy": "npm run build && npm run generate",
    "build:hostinger": "npm run generate && npm run build && echo 'Build completed successfully'"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@remix-run/dev": "^2.15.0",
    "@remix-run/node": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "@remix-run/serve": "^2.15.0",
    "@shopify/app-bridge-react": "^4.1.3",
    "@shopify/polaris": "^13.9.0",
    "@shopify/shopify-api": "^11.4.0",
    "@shopify/shopify-app-remix": "^3.3.0",
    "@shopify/shopify-app-session-storage-prisma": "^5.1.0",
    "crypto-js": "^4.2.0",
    "isbot": "^5.1.17",
    "node-cron": "^3.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.3"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^2.15.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "eslint": "^8.57.1",
    "prisma": "^5.22.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
